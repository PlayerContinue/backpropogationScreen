<Window x:Class="VisualBackpropogation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CustomGraphs="clr-namespace:VisualBackpropogation"
    Title="MainWindow" Height="350" Width="525">

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Name="_File" Header="_File">
                    <MenuItem Name="Open" Header="_Open"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
                <MenuItem Name="Display" Header="_Display"/>
            </Menu>
            <CustomGraphs:GraphView>
                
                <GridSplitter HorizontalAlignment="Stretch" Height="299" Width="5"/>
                

            </CustomGraphs:GraphView>
        </DockPanel>
    </Grid>
</Window>
